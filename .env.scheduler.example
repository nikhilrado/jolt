# Strava Scheduler Configuration
# Add these to your .env file

# Enable/disable the Strava activity scheduler
# Set to 'false' in development if you don't want background jobs running
ENABLE_STRAVA_SCHEDULER=true

# Scheduler intervals (in minutes)
STRAVA_CHECK_INTERVAL=15      # Check for new activities every 15 minutes
NOTIFICATION_SEND_INTERVAL=5   # Send notifications every 5 minutes
HEALTH_CHECK_INTERVAL=60      # Health check every hour

# Scheduler timezone (optional, defaults to UTC)
SCHEDULER_TIMEZONE=UTC
